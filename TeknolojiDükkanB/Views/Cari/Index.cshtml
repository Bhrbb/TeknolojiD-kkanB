@using TeknolojiDükkanB.Models.Sınıflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Cari Sayfası </h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Mail</th>
        <th>Cari Sehir</th>
        <th>Cari SİL</th>
        <th>Cari Güncelle</th>
        <th>Cari Detaylar</th>
    </tr>
    @foreach(var x in Model)
     {
                <tr>
                    <td>@x.CariID</td>
                    <td>@x.CariAd</td>
                    <td>@x.CariSoyad</td>
                    <td>@x.CariMail</td>
                    <td>@x.CariSehir</td>
                    <td><a href="/Cari/Sil/@x.CariID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Cari/Getir/@x.CariID" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Cari/MsteriSatis/@x.CariID" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
                    <td></td>
                </tr>
     }
</table>
   <a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekleme</a>


@using TeknolojiDükkanB.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı:
    @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel Id</th>
        <th>Ad</th>
        <th>Soyad</th>
     
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.PersonelID</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
       
        <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:lightblue">Satışlar</a></td>
    </tr>
    }

</table>
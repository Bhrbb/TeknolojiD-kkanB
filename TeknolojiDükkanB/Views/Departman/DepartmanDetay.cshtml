@using TeknolojiDükkanB.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Departman Detay Sayfası</h2>

<div style="background-color:lightgrey" >
    dd
</div>
<br />
<table class="table table-hover">
    <tr>
        <th>Personel Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.PersonelID</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td>@x.PersonelGorsel</td>
        <td><a href="#" class="btn btn-default" style="background-color:crimson">Satışlar</a></td>
    </tr>
    }

</table>
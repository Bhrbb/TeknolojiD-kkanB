@model TeknolojiDükkanB.Models.Sınıflar.Departman
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Yeni departman sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.DepartmanAdi)
    @Html.TextBoxFor(x => x.DepartmanAdi, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>
